
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isCreatingConsistentChild(userId) {
      return request.resource.data.userId == userId;
    }
    
    function isUpdatingConsistentChild() {
      return request.resource.data.userId == resource.data.userId;
    }
    
    function isUpdatingAllowedUserFields() {
      // A user cannot change their core identifiers or sensitive info.
      let protectedFields = ['id', 'userId', 'email', 'joinDate'];
      let incomingKeys = request.resource.data.keys();
      let existingKeys = resource.data.keys();

      // Check that no protected fields are being changed by comparing them to existing resource
      return !incomingKeys.hasAny(protectedFields);
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing all users
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId) && isUpdatingAllowedUserFields();
      allow delete: if isExistingOwner(userId);

      // Sub-collection for all financial transactions (income/expense)
      match /transactions/{transactionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && isCreatingConsistentChild(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      // Sub-collection for all debt records (lent, borrowed, shop dues)
      match /debtNotes/{debtNoteId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && isCreatingConsistentChild(userId);
        allow update, delete: if isExistingOwner(userId);
      }
      
      // Sub-collection for daily check-ins
      match /checkIns/{checkInId} {
        allow read, write: if isOwner(userId);
      }

      // Sub-collection for NID verification requests
      match /verificationRequests/{requestId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId); // Allow user to update/delete their own request if needed. Admin rules would be separate.
      }

      // Sub-collection for reward point withdrawal requests
      match /withdrawalRequests/{requestId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId); // Allow user to manage their requests.
      }
    }
  }
}
