
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    function isUpdatingAllowedUserFields() {
      // A user cannot change their core identifiers or sensitive info.
      let protectedFields = ['id', 'userId', 'email', 'joinDate'];
      let allIncomingKeys = request.resource.data.keys();
      
      // Check that no protected fields are being changed.
      return !allIncomingKeys.hasAny(protectedFields);
    }
    
    function canUpdateWithdrawalRequest() {
      // User can create, but cannot update status or other admin-only fields.
      let userUpdatableFields = ['paymentMethod', 'accountNumber'];
      let incomingKeys = request.resource.data.keys();
      let existingKeys = resource.data.keys();
      
      // Check if user is trying to update a field they shouldn't
      return incomingKeys.removeAll(userUpdatableFields).size() == existingKeys.removeAll(userUpdatableFields).size();
    }


    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing all users
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId) && isUpdatingAllowedUserFields();
      allow delete: if false; // Generally users should not delete their own accounts this way.

      // Sub-collection for all financial transactions (income/expense)
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }

      // Sub-collection for all debt records (lent, borrowed, shop dues)
      match /debtNotes/{debtNoteId} {
        allow read, write: if isOwner(userId);
      }
      
      // Sub-collection for daily check-ins
      match /checkIns/{checkInId} {
        allow read, write: if isOwner(userId);
      }

      // Sub-collection for NID verification requests
      match /verificationRequests/{requestId} {
        allow read, write: if isOwner(userId); 
      }

      // Sub-collection for reward point withdrawal requests
      match /withdrawalRequests/{requestId} {
        allow get, create, delete: if isOwner(userId);
        allow list: if isOwner(userId);
        // User cannot update status or rejection reasons. Only admin via console.
        allow update: if isExistingOwner(userId) && canUpdateWithdrawalRequest(); 
      }
    }
    
    // Global app configuration
    match /app_config/{configId} {
      allow get: if isSignedIn();
      allow list, create, update, delete: if false; // Read-only for clients
    }
  }
}

    