
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      // A user is the owner if they are signed in and their UID matches the document's userId.
      return request.auth.uid == userId;
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      // A user can get their own document.
      allow get: if isOwner(userId);
      // Allow querying for a single user by referral code during registration
      allow list: if request.query.limit <= 1;
      // A signed-in user can create their own user document. A signed-in user (the new referred user)
      // can also update the referrer's points.
      allow create: if isSignedIn();
      allow update: if isOwner(userId) || isSignedIn();
      // Users should not be able to delete their own accounts this way.
      allow delete: if false;

      // Sub-collection for all financial transactions (income/expense)
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }

      // Sub-collection for all debt records (lent, borrowed, shop dues)
      match /debtNotes/{debtNoteId} {
        allow read, write: if isOwner(userId);
      }
      
      // Sub-collection for daily check-ins
      match /checkIns/{checkInId} {
        allow list, get, create, delete, update: if isOwner(userId);
      }

      // Sub-collection for NID verification requests
      match /verificationRequests/{requestId} {
        allow get, create: if isOwner(userId);
        allow list: if isOwner(userId);
        // Only admin should be able to update (approve/reject) or delete requests.
        allow update, delete: if false; 
      }

      // Sub-collection for reward point withdrawal requests
      match /withdrawalRequests/{requestId} {
        allow get, create, delete: if isOwner(userId);
        allow list: if isOwner(userId);
        // User can update only specific fields. They can update isRefunded to true
        // but cannot change status or rejection reasons set by admin.
        allow update: if isOwner(userId) && 
                         request.resource.data.diff(resource.data).affectedKeys()
                           .hasOnly(['paymentMethod', 'accountNumber', 'isRefunded', 'processedAt']);
      }
      
      // Sub-collection for notifications
      match /notifications/{notificationId} {
        allow create, update: if isOwner(userId);
        allow read: if isOwner(userId);
        allow delete: if false;
      }
      
      // Sub-collection for referral records
      match /referrals/{referralId} {
        allow read: if isOwner(userId);
        // Only the system (via a new user signup) can create these records
        allow create: if isSignedIn();
        allow update, delete: if false;
      }
    }
    
    // Global app configuration
    match /app_config/{configId} {
      allow get: if isSignedIn();
      // Allow any signed-in user to create the config document (e.g., on first registration).
      allow create: if isSignedIn();
      // Prevent clients from listing, updating, or deleting config.
      allow list, update, delete: if false; 
    }
  }
}

    