
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      // A user is the owner if they are signed in and their UID matches the document's userId.
      return request.auth.uid == userId;
    }

    function isUpdatingAllowedUserFields() {
        // Defines the fields a user is allowed to update on their own profile.
        let userUpdatableFields = [
            'name', 'avatar', 'phone', 'address', 
            'lastCheckIn', 'checkInStreak', 
            'verificationStatus', 'verificationRequestId', 
            'nidName', 'nidNumber', 'nidDob', 'nidAddress'
        ];
        
        // Check that all keys in the incoming data are in the allowed list.
        return request.resource.data.keys().hasOnly(userUpdatableFields);
    }
    
    function canUpdateWithdrawalRequest() {
      // User can create, but cannot update status or other admin-only fields.
      let userUpdatableFields = ['paymentMethod', 'accountNumber'];
      let incomingKeys = request.resource.data.keys();
      let existingKeys = resource.data.keys();
      
      // Check if user is trying to update a field they shouldn't
      return incomingKeys.removeAll(userUpdatableFields).size() == existingKeys.removeAll(userUpdatableFields).size();
    }


    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      // A user can get their own document.
      allow get: if isOwner(userId);
      // Nobody can list all users.
      allow list: if false;
      // A signed-in user can create their own user document.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // A user can update their own document, but only specific fields.
      allow update: if isOwner(userId) && isUpdatingAllowedUserFields();
      // Users should not be able to delete their own accounts this way.
      allow delete: if false;

      // Sub-collection for all financial transactions (income/expense)
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }

      // Sub-collection for all debt records (lent, borrowed, shop dues)
      match /debtNotes/{debtNoteId} {
        allow read, write: if isOwner(userId);
      }
      
      // Sub-collection for daily check-ins
      match /checkIns/{checkInId} {
        allow list, get, create, delete, update: if isOwner(userId);
      }

      // Sub-collection for NID verification requests
      match /verificationRequests/{requestId} {
        allow read, write: if isOwner(userId); 
      }

      // Sub-collection for reward point withdrawal requests
      match /withdrawalRequests/{requestId} {
        allow get, create, delete: if isOwner(userId);
        allow list: if isOwner(userId);
        // User cannot update status or rejection reasons. Only admin via console.
        allow update: if isOwner(userId) && canUpdateWithdrawalRequest(); 
      }
    }
    
    // Global app configuration
    match /app_config/{configId} {
      allow get: if isSignedIn();
      // Allow any signed-in user to create the config document (e.g., on first registration).
      allow create: if isSignedIn();
      // Prevent clients from listing, updating, or deleting config.
      allow list, update, delete: if false; 
    }
  }
}
